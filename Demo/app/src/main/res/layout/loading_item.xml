<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="300px"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/color_text_grey_level2"
        android:text="当前选择：1px" />

    <View
        android:id="@+id/ling_px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/color_bg_red"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_text_grey_level2"
        android:text="请选择线条粗细：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/px_1"
            android:tag="1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="1px"
            android:textColor="@drawable/chat_selector"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/px_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tag="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="2px"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/px_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:tag="3"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="3px"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/px_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:tag="4"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="4px"
            android:textColor="@drawable/chat_selector"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/px_5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="5"
            android:onClick="onClick"
            android:text="5px"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/px_6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="6"
            android:onClick="onClick"
            android:text="6px"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/px_7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:tag="7"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="7px"
            android:textColor="@drawable/chat_selector"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/px_8"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="8"
            android:onClick="onClick"
            android:text="8px"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/px_9"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="9"
            android:onClick="onClick"
            android:text="9px"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/width_cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="取消"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/width_ok"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="確定"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
