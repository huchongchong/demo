<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="300px"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_text_grey_level2"
        android:text="当前选择:" />

    <View
        android:id="@+id/ling_color"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_text_grey_level2"
        android:text="请选择线条颜色：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_1"
            android:tag="#ff000000"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@android:color/black"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tag="#ffffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/yellow"
            android:clickable="true"
            android:tag="#ffff00"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:tag="#ff0000"
            android:background="@color/red"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/aquamarine"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="#7fffd4"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/green"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="#008000"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/blue"
            android:clickable="true"
            android:gravity="center"
            android:tag="#0000ff"
            android:maxEms="2"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_8"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/darkgoldenrod"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="#b8860b"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_9"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/lightgray"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:tag="#d3d3d3"
            android:onClick="onClick"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="取消"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/color_ok"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:maxEms="2"
            android:onClick="onClick"
            android:text="確定"
            android:textColor="@drawable/chat_selector"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
