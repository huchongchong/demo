<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.demo.administrator.demo.SelectEditActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="请选择编辑区域"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_selectedit" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/area_1"
            android:layout_width="@dimen/selectedit_area_width"
            android:layout_height="@dimen/selectedit_area_height">

            <TextView
                android:id="@+id/area_tv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_selectedit"
                android:textColor="@drawable/chat_selector"
                android:background="@drawable/bg_selector"
                android:clickable="true"
                android:text="1" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/devider"
            android:layout_height="@dimen/devider_height"
            android:background="@color/color_divider"></View>

        <RelativeLayout
            android:id="@+id/area_2"
            android:background="@color/color_white"
            android:layout_width="@dimen/selectedit_area_width"
            android:layout_height="@dimen/selectedit_area_height">

            <TextView
                android:id="@+id/area_tv_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_selectedit"
                android:textColor="@drawable/chat_selector"
                android:background="@drawable/bg_selector"
                android:clickable="true"
                android:text="2" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="@dimen/devider_width"
        android:layout_height="@dimen/devider"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_divider"
        ></View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/area_3"
            android:background="@color/color_white"
            android:layout_width="@dimen/selectedit_area_width"
            android:layout_height="@dimen/selectedit_area_height">

            <TextView
                android:id="@+id/area_tv_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_selectedit"
                android:textColor="@drawable/chat_selector"
                android:background="@drawable/bg_selector"
                android:clickable="true"
                android:text="3" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/devider"
            android:layout_height="match_parent"
            android:background="@color/color_divider"></View>

        <RelativeLayout
            android:id="@+id/area_4"
            android:layout_width="@dimen/selectedit_area_width"
            android:layout_height="@dimen/selectedit_area_height"
            android:background="@color/color_white"
            >

            <TextView
                android:id="@+id/area_tv_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_selectedit"
                android:textColor="@drawable/chat_selector"
                android:background="@drawable/bg_selector"
                android:clickable="true"
                android:text="4" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
